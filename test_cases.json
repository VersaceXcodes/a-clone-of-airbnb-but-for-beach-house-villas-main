  "testCases": [
    {
      "id": "auth-guest-signup",
      "name": "Guest User Registration Test",
      "category": "authentication",
      "priority": "critical",
      "description": "Test guest user signup functionality with email validation",
      "steps": [
        "Navigate to guest signup page",
        "Enter valid email address",
        "Enter strong password (8+ characters)",
        "Enter display name",
        "Submit signup form",
        "Verify successful registration and JWT token received"
      ],
      "expectedOutcome": "User successfully registered and logged in with JWT token",
      "selectors": {
        "emailInput": "[data-testid='signup-email-input']",
        "passwordInput": "[data-testid='signup-password-input']",
        "displayNameInput": "[data-testid='signup-display-name-input']",
        "submitButton": "[data-testid='signup-submit-button']",
        "successMessage": "[data-testid='signup-success']"
      }
    },
