      "id": "auth-guest-login",
      "name": "Guest User Login Test",
      "category": "authentication",
      "priority": "critical",
      "description": "Test guest login functionality with valid credentials",
      "steps": [
        "Navigate to guest login page (/guest/login)",
        "Enter valid email address",
        "Enter valid password",
        "Click login submit button",
        "Verify redirect to guest dashboard"
      ],
      "expectedOutcome": "Successfully logged in as guest and redirected to dashboard",
